        background: rgba(244, 67, 54, 0.2);
        color: #f44336;
    }
    
    .status-indicator.disconnected::before {
        background: #f44336;
    }
    
    .job-status {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }
    
    .job-status.running {
        background: rgba(33, 150, 243, 0.2);
        color: #2196f3;
    }
    
    .job-status.completed {
        background: rgba(76, 175, 80, 0.2);
        color: #4caf50;
    }
    
    .job-status.failed {
        background: rgba(244, 67, 54, 0.2);
        color: #f44336;
    }
    
    .job-status.queued {
        background: rgba(158, 158, 158, 0.2);
        color: #9e9e9e;
    }
</style>

@code {
    private double CpuUsage = 23;
    private double MemoryUsage = 67;
    private double DiskUsage = 45;
    private string Uptime = "5d 12h 34m";
    private bool MqttConnected = true;
    private int ActiveConnections = 3;
    private int RunningFlows = 5;
    private int SubscribedTags = 127;
    
    private string SelectedLogLevel = "All";
    private string LogSearchQuery = "";
    private List<string> LogLevels = new() { "All", "Debug", "Info", "Warn", "Error" };
    
    private List<LogEntry> Logs = new()
    {
        new() { Timestamp = DateTime.Now.AddMinutes(-1), Level = "INFO", Source = "FlowEngine", Message = "Flow 'Temperature Monitor' started successfully" },
        new() { Timestamp = DateTime.Now.AddMinutes(-2), Level = "DEBUG", Source = "Connectivity", Message = "Tag value updated: Tank1.Temperature = 72.5¬∞C" },
        new() { Timestamp = DateTime.Now.AddMinutes(-3), Level = "WARN", Source = "MQTT", Message = "Connection retry attempt 2/5" },
        new() { Timestamp = DateTime.Now.AddMinutes(-5), Level = "ERROR", Source = "Connectivity", Message = "Failed to connect to PLC-02: Connection timeout" },
        new() { Timestamp = DateTime.Now.AddMinutes(-8), Level = "INFO", Source = "System", Message = "Database backup completed" },
        new() { Timestamp = DateTime.Now.AddMinutes(-10), Level = "INFO", Source = "Auth", Message = "User 'admin' logged in" },
        new() { Timestamp = DateTime.Now.AddMinutes(-15), Level = "DEBUG", Source = "FlowEngine", Message = "Executing node 'math-add-1'" }
    };
    
    private List<LogEntry> FilteredLogs => Logs
        .Where(l => SelectedLogLevel == "All" || l.Level.Equals(SelectedLogLevel, StringComparison.OrdinalIgnoreCase))
        .Where(l => string.IsNullOrEmpty(LogSearchQuery) || l.Message.Contains(LogSearchQuery, StringComparison.OrdinalIgnoreCase))
        .ToList();
    
    private List<NetworkConnection> NetworkConnections = new()
    {
        new() { Name = "PLC-Production-01", Host = "192.168.1.100", Port = 44818, Connected = true, Latency = 12, LastActivity = DateTime.Now.AddSeconds(-5) },
        new() { Name = "OPC-Server-Main", Host = "192.168.1.50", Port = 4840, Connected = true, Latency = 8, LastActivity = DateTime.Now.AddSeconds(-2) },
        new() { Name = "MQTT Broker", Host = "localhost", Port = 1883, Connected = true, Latency = 1, LastActivity = DateTime.Now.AddSeconds(-1) }
    };
    
    private List<MqttTopic> MqttTopics = new()
    {
        new() { Topic = "dataforeman/telemetry/+", MessageCount = 1523, LastMessage = DateTime.Now.AddSeconds(-2) },
        new() { Topic = "dataforeman/events/+", MessageCount = 45, LastMessage = DateTime.Now.AddMinutes(-5) },
        new() { Topic = "dataforeman/commands/#", MessageCount = 12, LastMessage = DateTime.Now.AddMinutes(-15) }
    };
    
    private List<JobItem> Jobs = new()
    {
        new() { Type = "Data Export", Status = "Running", Progress = 65, StartedAt = DateTime.Now.AddMinutes(-10) },
        new() { Type = "Tag Cleanup", Status = "Completed", Progress = 100, StartedAt = DateTime.Now.AddHours(-2), CompletedAt = DateTime.Now.AddHours(-1) },
        new() { Type = "Database Backup", Status = "Queued", Progress = 0, StartedAt = null }
    };
    
    private void RefreshData()
    {
        // Refresh system data
        var random = new Random();
        CpuUsage = random.Next(15, 45);
        MemoryUsage = random.Next(50, 80);
    }
    
    private string GetUsageColor(double usage)
    {
        if (usage < 50) return "#4caf50";
        if (usage < 75) return "#ff9800";
        return "#f44336";
    }
    
    class LogEntry
    {
        public DateTime Timestamp { get; set; }
        public string Level { get; set; } = "";
        public string Source { get; set; } = "";
        public string Message { get; set; } = "";
    }
    
    class NetworkConnection
    {
        public string Name { get; set; } = "";
        public string Host { get; set; } = "";
        public int Port { get; set; }
        public bool Connected { get; set; }
        public int Latency { get; set; }
        public DateTime LastActivity { get; set; }
    }
    
    class MqttTopic
    {
        public string Topic { get; set; } = "";
        public int MessageCount { get; set; }
        public DateTime LastMessage { get; set; }
    }
    
    class JobItem
    {
        public string Type { get; set; } = "";
        public string Status { get; set; } = "";
        public int Progress { get; set; }
        public DateTime? StartedAt { get; set; }
        public DateTime? CompletedAt { get; set; }
    }
}
