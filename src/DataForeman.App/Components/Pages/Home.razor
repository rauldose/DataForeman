@page "/"
@rendermode InteractiveServer
@inject RealtimeDataService DataService
@inject ConfigService ConfigService
@implements IDisposable

<PageTitle>Dashboard - DataForeman</PageTitle>

<div class="dashboard">
    <h1>Dashboard</h1>

    <div class="stats-grid">
        <div class="stat-card">
            <span class="stat-value">@ConfigService.Connections.Count</span>
            <span class="stat-label">Connections</span>
        </div>
        <div class="stat-card">
            <span class="stat-value">@ConfigService.Connections.Sum(c => c.Tags.Count)</span>
            <span class="stat-label">Tags</span>
        </div>
        <div class="stat-card">
            <span class="stat-value">@ConfigService.Charts.Count</span>
            <span class="stat-label">Charts</span>
        </div>
        <div class="stat-card">
            <span class="stat-value">@ConfigService.Flows.Count</span>
            <span class="stat-label">Flows</span>
        </div>
    </div>

    @if (DataService.EngineStatus is { } status)
    {
        <div class="engine-panel">
            <div class="panel-header">
                <h2>Engine Status</h2>
                <span class="status-badge @(status.Running ? "running" : "stopped")">
                    @(status.Running ? "Running" : "Stopped")
                </span>
            </div>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Active Connections</span>
                    <span class="info-value">@status.ActiveConnections</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Active Tags</span>
                    <span class="info-value">@status.ActiveTags</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Scan Count</span>
                    <span class="info-value">@status.ScanCount.ToString("N0")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Avg Scan Time</span>
                    <span class="info-value">@status.AverageScanTimeMs.ToString("F2") ms</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Memory</span>
                    <span class="info-value">@((status.MemoryUsedBytes / 1024.0 / 1024.0).ToString("F1")) MB</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Uptime</span>
                    <span class="info-value">@FormatUptime(status.StartTime)</span>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="engine-panel offline">
            <div class="panel-header">
                <h2>Engine Status</h2>
                <span class="status-badge stopped">Offline</span>
            </div>
            <p class="offline-message">Engine is not connected. Start the DataForeman.Engine service.</p>
        </div>
    }

    <div class="recent-tags-panel">
        <h2>Recent Tag Values</h2>
        @if (RecentTags.Any())
        {
            <SfGrid DataSource="@RecentTags.Take(15).ToList()" AllowSelection="false">
                <GridColumns>
                    <GridColumn Field="@nameof(TagValueMessage.ConnectionId)" HeaderText="Connection" Width="120"></GridColumn>
                    <GridColumn Field="@nameof(TagValueMessage.TagId)" HeaderText="Tag" Width="100"></GridColumn>
                    <GridColumn HeaderText="Value" Width="120">
                        <Template>
                            @{
                                var tag = context as TagValueMessage;
                                <span class="value-cell">@FormatValue(tag?.Value)</span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Quality" Width="100">
                        <Template>
                            @{
                                var tag = context as TagValueMessage;
                                <span class="quality-badge @tag?.Quality.ToString().ToLower()">@tag?.Quality</span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="Timestamp" Width="120">
                        <Template>
                            @{
                                var tag = context as TagValueMessage;
                                <span>@tag?.GetDateTime().ToString("HH:mm:ss.fff")</span>
                            }
                        </Template>
                    </GridColumn>
                </GridColumns>
            </SfGrid>
        }
        else
        {
            <div class="no-data">
                No tag data available. Configure connections and start the engine.
            </div>
        }
    </div>
</div>

<style>
    .dashboard h1 {
        margin: 0 0 16px 0;
        font-size: 18px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
        margin-bottom: 16px;
    }

    .stat-card {
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 4px;
        padding: 16px;
        text-align: center;
    }

    .stat-value {
        display: block;
        font-size: 28px;
        font-weight: 600;
        color: var(--accent-primary);
    }

    .stat-label {
        font-size: 11px;
        color: var(--text-muted);
        text-transform: uppercase;
    }

    .engine-panel {
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 4px;
        padding: 16px;
        margin-bottom: 16px;
    }

    .engine-panel.offline {
        border-color: var(--status-error);
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .panel-header h2 {
        margin: 0;
        font-size: 13px;
    }

    .status-badge {
        padding: 3px 10px;
        border-radius: 12px;
        font-size: 10px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-badge.running {
        background: rgba(34, 197, 94, 0.2);
        color: var(--status-ok);
    }

    .status-badge.stopped {
        background: rgba(239, 68, 68, 0.2);
        color: var(--status-error);
    }

    .offline-message {
        color: var(--text-muted);
        font-size: 12px;
        margin: 0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 12px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .info-label {
        font-size: 10px;
        color: var(--text-muted);
        text-transform: uppercase;
    }

    .info-value {
        font-size: 14px;
        font-weight: 500;
    }

    .recent-tags-panel {
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        border-radius: 4px;
        padding: 16px;
    }

    .recent-tags-panel h2 {
        margin: 0 0 12px 0;
        font-size: 13px;
    }

    .value-cell {
        font-family: Consolas, monospace;
        font-size: 11px;
    }

    .quality-badge {
        padding: 2px 8px;
        border-radius: 3px;
        font-size: 10px;
        font-weight: 500;
    }

    .quality-badge.good {
        background: rgba(34, 197, 94, 0.2);
        color: var(--status-ok);
    }

    .quality-badge.bad {
        background: rgba(239, 68, 68, 0.2);
        color: var(--status-error);
    }

    .quality-badge.uncertain {
        background: rgba(245, 158, 11, 0.2);
        color: var(--status-warn);
    }

    .no-data {
        color: var(--text-muted);
        font-size: 12px;
        font-style: italic;
        text-align: center;
        padding: 24px;
    }
</style>

@code {
    private IEnumerable<TagValueMessage> RecentTags =>
        DataService.GetAllTagValues().OrderByDescending(t => t.Timestamp);

    protected override void OnInitialized()
    {
        DataService.OnDataChanged += HandleDataChanged;
        DataService.OnEngineStatusChanged += HandleStatusChanged;
    }

    private void HandleDataChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void HandleStatusChanged(EngineStatusMessage status)
    {
        InvokeAsync(StateHasChanged);
    }

    private string FormatValue(object? value)
    {
        return value switch
        {
            double d => d.ToString("F3"),
            float f => f.ToString("F3"),
            null => "-",
            _ => value.ToString() ?? "-"
        };
    }

    private string FormatUptime(long startTimestamp)
    {
        var start = DateTimeOffset.FromUnixTimeMilliseconds(startTimestamp);
        var uptime = DateTimeOffset.UtcNow - start;

        if (uptime.TotalDays >= 1)
            return $"{(int)uptime.TotalDays}d {uptime.Hours}h";
        if (uptime.TotalHours >= 1)
            return $"{(int)uptime.TotalHours}h {uptime.Minutes}m";
        return $"{(int)uptime.TotalMinutes}m {uptime.Seconds}s";
    }

    public void Dispose()
    {
        DataService.OnDataChanged -= HandleDataChanged;
        DataService.OnEngineStatusChanged -= HandleStatusChanged;
    }
}
